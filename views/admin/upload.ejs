<%- include ("includes/header") %>

<script type="text/javascript">
   function fileSelected() {
      var fileName = document.getElementById("file").files[0].name;
      document.getElementById("filename").innerHTML = fileName;
   }
</script>

<div class="container-fluid pt-5 pb-5" id="video-upload-container">
   <div class="row">

      <div class="col-md-12">
         <form method="POST" action="/admin/upload-video" enctype="multipart/form-data">

            <div class="form-group">
               <label>Select video</label>
               <input type="file" accept="video/mp4,video/*" name="video" required>
            </div>

            <div class="form-group">
               <label>Select thumbnail</label>
               <input type="file" name="thumbnail" accept="image/*" required>
            </div>

            <div class="form-group">
               <label>Title</label>
               <input type="text" name="title" class="form-control" required>
            </div>

            <div class="form-group">
               <label>Price <span style="color:#85bb65;">(usd)</span></label>
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" style="font-size: 1em;">$</span>
                  </div>
                  <input type="number" name="price" min="0.00" max="10000.00" step="0.01" class="form-control" onfocusout="roundDecimals(this);" required>
                </div>
            </div>

            <div class="form-group">
               <label>Description</label>
               <textarea type="text" name="description" rows="10" class="form-control"></textarea>
            </div>

            <div class="form-group">
               <label>Tags</label>
               <input type="text" name="tags" class="form-control">
            </div>

            <div class="form-group">
               <label>Category</label>
               <select name="category" class="form-control">
                  <option value="">Select category</option>
                  <option value="Wellbeing">Wellbeing</option>
                  <option value="Healthy Food">Healthy Food</option>
                  <option value="Education">Education</option>
               </select>
            </div>

            <input type="submit" class="btn btn-outline-primary" value="Upload Video">
         </form>
      </div>
   </div>
</div>
<!-- /.container-fluid -->


<%- include ("includes/footer") %>
