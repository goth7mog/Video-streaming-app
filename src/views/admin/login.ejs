<!DOCTYPE html>
<html lang="en">
   
<head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta property="title" content="HIPNO NUTRICIÓN - Admin Panel">
      <meta name="robots" content="noindex,follow" />
      <meta name="description" content="HIPNO NUTRICIÓN - Admin Panel">
   
      <title>HIPNO NUTRICIÓN - Admin Panel</title>
      <!-- Favicon Icon -->
      <link rel="icon" type="image/png" href="/public/admin/img/admin-favicon.png">
      <!-- Bootstrap core CSS-->
      <link href="/public/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <!-- Custom fonts for this template-->
      <link href="/public/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
      <!-- Custom styles for this template-->
      <link href="/public/admin/css/main.css" rel="stylesheet">
      <!-- Owl Carousel -->
      <link rel="stylesheet" href="/public/admin/vendor/owl-carousel/owl.carousel.css">
      <link rel="stylesheet" href="/public/admin/vendor/owl-carousel/owl.theme.css">
      <link rel="stylesheet" href="/public/admin/css/alertify.min.css">
   </head>
   <body class="login-main-body">
      <section class="login-main-wrapper">
         <div class="container-fluid pl-0 pr-0">
            <div class="row no-gutters">
               <div class="col-md-5 p-5 bg-white full-height">
                  <div class="login-main-left">
                     <div class="text-center mb-5 login-main-left-header pt-4">
                        <img src="/public/admin/img/admin-favicon.png" class="admin-logo img-fluid" alt="LOGO">
                        <h5 class="mt-3 mb-3">Welcome</h5>
                        <p>Sign in to your Hipnonutricion Admin Panel</p>
                     </div>

                     <% if (message != "") { %>
                        <div class="alert alert-success">
                           <%= message %>
                        </div>
                     <% } %>

                     <% if (error != "") { %>
                        <div class="alert alert-danger">
                           <%= error %>
                        </div>
                     <% } %>

                     <form action="/admin/login" method="POST">
                        <div class="form-group">
                           <label>Email</label>
                           <input type="email" class="form-control" name="email" id="email" autocomplete="on">
                        </div>
                        <div class="form-group">
                           <label>Password</label>
                           <input type="password" class="form-control" name="password" id="password">
                        </div>
                        <div class="mt-4">
                           <div class="row">
                              <div class="col-12">
                                 <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Sign In</button>
                              </div>
                           </div>
                        </div>
                     </form>
                     <div class="text-center mt-5">
                        <!-- <p class="light-gray">Don’t have an account? <a href="/admin/register">Sign Up</a></p> -->

                        <!-- <p class="light-gray">
                           <a href="javascript:void(0);">Forgot Password ?
                              <i class="fa fa-star"></i>
                           </a>
                        </p> -->
                     </div>
                  </div>
               </div>
               <div class="col-md-7">
                  <div class="login-main-right bg-white p-5 mt-5 mb-5">
                     <div class="owl-carousel owl-carousel-login">
                        <div class="item">
                           <div class="carousel-login-card text-center">
                              <img src="/public/admin/img/login.png" class="img-fluid" alt="LOGO">
                              <h5 class="mt-5 mb-3">​Upload and Edit Videos</h5>
                           </div>
                        </div>
                        <div class="item">
                           <div class="carousel-login-card text-center">
                              <img src="/public/admin/img/login.png" class="img-fluid" alt="LOGO">
                              <h5 class="mt-5 mb-3">Manage your account settings</h5>
                           </div>
                        </div>
                        <div class="item">
                           <div class="carousel-login-card text-center">
                              <img src="/public/admin/img/login.png" class="img-fluid" alt="LOGO">
                              <h5 class="mt-5 mb-3">And many other features are available</h5>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Bootstrap core JavaScript-->
      <script src="/public/admin/vendor/jquery/jquery.min.js"></script>
      <script src="/public/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <!-- Core plugin JavaScript-->
      <script src="/public/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
      <!-- Owl Carousel -->
      <script src="/public/admin/vendor/owl-carousel/owl.carousel.js"></script>
      <script src="/public/admin/js/alertify.min.js"></script>

      <!-- <% if (error === "Session expired") { %>
         <script>
            addEventListener("DOMContentLoaded", () => {
               alertify.notify('Your session expired', 'error', 1.5);
            });   
         </script>
      <% } %> -->

      <!-- Custom scripts for all pages-->
      <script src="/public/admin/js/custom.js"></script>
   </body>

</html>